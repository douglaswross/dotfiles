[user]
    name = Douglas Ross
    email = douglaswross@gmail.com

[core]
    editor = vim
    autocrlf = input
    whitespace = fix
    pager = less -FRX

[init]
    defaultBranch = main

[pull]
    rebase = false

[push]
    default = current
    autoSetupRemote = true

[fetch]
    prune = true

[diff]
    colorMoved = zebra

[merge]
    conflictstyle = diff3

[alias]
    # Status
    s = status -sb
    st = status

    # Logging
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    ll = log --oneline -20
    last = log -1 HEAD --stat

    # Branching
    br = branch
    co = checkout
    cob = checkout -b

    # Committing
    ci = commit
    cm = commit -m
    ca = commit --amend
    can = commit --amend --no-edit

    # Diffing
    d = diff
    ds = diff --staged
    dc = diff --cached

    # Undoing
    unstage = reset HEAD --
    undo = reset --soft HEAD~1

    # Stashing
    ss = stash save
    sp = stash pop
    sl = stash list

    # Shortcuts
    aa = add -A
    p = push
    pl = pull
    f = fetch
    rb = rebase

    # Show what I did today
    today = log --since=midnight --author='Douglas Ross' --oneline

    # List aliases
    aliases = config --get-regexp alias

[color]
    ui = auto
    branch = auto
    diff = auto
    status = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = green
    changed = yellow
    untracked = red

[credential]
    helper = store

[help]
    autocorrect = 1
